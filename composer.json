{
    "name": "anfragen/laravel-permissions",
    "description": "Package for managing user permissions and roles",
    "keywords": [
        "anfragen",
        "laravel",
        "roles",
        "permissions",
        "security"
    ],
    "homepage": "https://github.com/Anfragen/laravel-permissions",
    "license": "MIT",
    "authors": [
        {
            "name": "Jo√£o Pedro Lopes",
            "email": "joaopalopes24@gmail.com"
        }
    ],
    "require": {
        "php" : "^8.0|^8.1",
        "laravel/framework": "^9.31"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.22",
        "laravel/pint": "^1.2",
        "laravel/sail": "^1.16",
        "phpunit/phpunit": "^9.0",
        "pestphp/pest-plugin-laravel": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Anfragen\\Permission\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Anfragen\\Permission\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Anfragen\\Permission\\PermissionServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
